#include <iostream>
using namespace std;
int superpermutationLength(int&);

int main(){
	int digits;
	cout << "Enter number of digits: ";
	cin >> digits;
	cout << "The minimum length of the superpermutation for " << digits << " digits is "
	     << superpermutationLength(digits) << "." << endl;
	return 0;
}

int superpermutationLength(int& digits){
	int i;
	int j;
	int factorial;
	int length = 0;
	for (i = 1; i <= digits; i++){
	        factorial = 1;
		for (j = 1; j <= i; j++){
			factorial = factorial * j;
		}
		length += factorial;
	}
	return length;
}

